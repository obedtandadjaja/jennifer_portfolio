<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <%= form_for @attachment do |f| %>
                        <div class="input-field">
                            Title
                            <%= f.text_field :title, class: 'validate' %>
                        </div>

                        <div class="input-field">
                            Description
                            <%= f.text_field :description, class: 'validate' %>
                        </div>

                        <div class="input-field">
                            Project
                            <%= f.collection_select(:project_id, Project.all, :id, :title, {:class => 'validate chosen-select'}) %>
                        </div>

                        <div class="input-field">
                            Image URL
                            <div class="images">
                                <%= f.text_field :url, class: 'validate' %>
                            </div>
                        </div>

                        <div class="input-field" style="margin-bottom: 30px">
                            <%= f.check_box :is_primary, class: 'validate' %>
                            <%= f.label 'Is cover picture?', id: :is_primary %>
                        </div>

                        <div class="input-field">
                            <%= f.submit "Submit", class: "btn btn-default" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>