<% content_for :css do %>
<!--Style-->
  <%= stylesheet_link_tag "reset" %>
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "style-responsive" %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<% end %>

<!--Preloader-->

<div class="preloader" id="preloader">
    <div class="item">
      <div class="spinner">
      </div>
    </div>
</div>

<div class="opacity-nav">
  <div class="menu-index" id="buttons" style="z-index:999999">
    <i class="fa  fa-close"></i>
  </div>
  <ul class="menu-fullscreen">
    <li><a class="ajax-link" href="index.html">Home</a></li>
    <li><a class="ajax-link" href="projects.html">Projects</a></li>
    <li><a class="ajax-link" href="about-us.html">About us</a></li>
    <li><a class="ajax-link" href="contact.html">Contact</a></li>
  </ul>
</div>


  <!--Header-->
  <header id="fullscreen">
      <div class="logo" id="full"><a class="ajax-link" href="index.html">THOMSOON</a></div>
      <div class="menu-index" id="button">
      <i class="fa fa-bars"></i>
      </div>
  </header>

  <div class="clear"></div>

  <!--Content-->

  <div class="content" id="ajax-content">
    <div class="text-intro">
      <h1>Projects</h1>
      <p>Please check my portfolio. All project is clean and simplicity modern style. You can buy this template.</p>
    </div>


  <!--Portfolio grid-->
  <ul class="portfolio-grid">
    <% @project.attachment.each do |attachment| %>
    <li class="grid-item" data-jkit="[show:delay=3000;speed=500;animation=fade]">
        <%= image_tag attachment.image.url(:medium) %>
        <a class="ajax-link" href="/attachments/<%= attachment.id %>">
          <div class="grid-hover">
            <h1><%= attachment.title %></h1>
            <p><%= attachment.description %></p>
          </div>
        </a>
    </li>
    <% end %>
  </ul>

</div>



  <!--Home Sidebar-->

<div id="ajax-sidebar"></div>

  <!--Footer-->
  <footer>
    <div class="footer-margin">
      <div class="social-footer">
        <a href="https://www.facebook.com/jennifer.wiriawan96"><i class="fa fa-facebook"></i></a>
        <a href="https://www.behance.net/jenniferwiriawan"><i class="fa fa-behance"></i></a>
      </div>
      <div class="copyright">Â© Copyright 2015 Jennifer Wiriawan and Obed Tandadjaja. All rights reserved.</div>
    </div>
  </footer>


<% content_for :script do %>
<!--Scripts-->
  <%= javascript_include_tag "jquery.min.js" %>
  <%= javascript_include_tag "jquery.easing.min.js" %>
  <%= javascript_include_tag "modernizr.custom.42534.js" %>
  <%= javascript_include_tag "jquery.waitforimages.js" %>
  <%= javascript_include_tag "typed.js" %>
  <%= javascript_include_tag "masonry.pkgd.min.js" %>
  <%= javascript_include_tag "imagesloaded.pkgd.min.js" %>
  <%= javascript_include_tag "jquery.jkit.1.2.16.min.js" %>
  <%= javascript_include_tag "script.js" %>
	<script>
    $('#button, #buttons').on('click', function() {
      $( ".opacity-nav" ).fadeToggle( "slow", "linear" );
    // Animation complete.
    });
  </script>
<% end %>