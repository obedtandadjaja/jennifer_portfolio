<div class="container">
    <div class="row">
        <div class="col l12 m8 s12 offset-m2">
            <div class="card">
            	<div class="card-image">
					<img src="/images/card-image.jpg">
		      		<span class="card-title white-text">Forgot your password?</span>
				</div>
                <div class="card-content">
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					  <%= devise_error_messages! %>

					<div class="input-field">
						<i class="material-icons prefix">email</i>
		                <%= f.email_field :email, class: 'validate' %>
		                <label for="email" data-error="wrong" data-success="right">Email</label>
		          	</div>

					<div class="input-field center">
						<%= f.submit "Send me reset password instructions", class: 'btn blue-grey lighten-2' %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>