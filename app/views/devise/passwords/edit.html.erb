<div class="container-fluid">
  <div class="row">
    <div class="col l12 m8 s12 offset-m2">
      <div class="card">
        <div class="card-image">
          <img src="/images/card-image.jpg">
          <span class="card-title white-text">Request Reset Password</span>
        </div>
        <div class="card-content">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="input-field">
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="input-field">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>

          <div class="input-field">
            <%= submit_tag "Update Password", class: "btn btn-primary" %>
          </div>

        <% end %>


        </div>
      </div>
    </div>
  </div>
</div>