<% content_for :css do %>
<style>
html, body {
  background-color: #607d8b;
}
</style>
<% end %>

<div class="container">
  <div class="card col l12">
    <div class="card-image">
      <img src="/images/card-image.jpg">
      <span class="card-title white-text">Login</span>
    </div>
    <div class="card-content col l12">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="input-field col l6 m10 s12 offset-l3 offset-m1">
          <%= f.email_field :email %>
          <label for="user[email]">Email</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col l6 m10 s12 offset-l3 offset-m1">
          <%= f.password_field :password %>
          <label for="user[password]">Password</label>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="row">
        <div class="input-field col l6 m10 s12 offset-l3 offset-m1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
      <% end -%>

      <div class="row">
        <div class="input-field col s12 center">
          <%= f.submit "Log in", class: "btn" %>
        </div>
      </div>
    <% end %>
    
    <div class="center">
      <%= render "devise/shared/links" %>
    </div>

    </div>
  </div>
</div>
