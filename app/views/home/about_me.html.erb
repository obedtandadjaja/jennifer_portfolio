      <% end %>
      <div class="one-column">
        <p><%= @user.occupation %></p>
        <%= image_tag @user.avatar.url(:medium) %>
      </div>
      <div class="two-column">
        <p>
            <%= raw @user.bio %>
        </p>
      </div>
